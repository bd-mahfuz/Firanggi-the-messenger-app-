<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1c0c0"
    tools:context="com.everest.mahfuz.firanggi.ChatActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/chatToolBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/addImageBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_weight="4"
            android:src="@drawable/baseline_add_black_24dp" />


        <EditText
            android:id="@+id/chatEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_weight="2"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/sendImageBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_weight="4"
            android:src="@drawable/baseline_send_black_24dp" />
    </LinearLayout>





</RelativeLayout>
