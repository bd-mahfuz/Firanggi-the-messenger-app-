<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue"
    tools:context=".AccountActivity">


    <LinearLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/avatar_placeholder"
        android:gravity="center"
        android:orientation="vertical"
        android:clipToPadding="false"
        >



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userIv"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape"
            android:padding="2dp"
            android:elevation="5dp"
            android:src="@drawable/avatar_placeholder">


        </de.hdodenhof.circleimageview.CircleImageView>

        <Button
            android:id="@+id/changeBackgroundBt"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_create_black_24dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/default_user_name_text"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/userStatusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/default_status_Text"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/changeImageBt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:text="Change Image"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/bordered_button"/>

    <Button
        android:id="@+id/changeStatusBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changeImageBt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-114dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Change Status"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/bordered_button"
        />


</RelativeLayout>